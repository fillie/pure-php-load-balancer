{
  "name": "frazerlillie/php-load-balancer",
  "version": "1.0.0",
  "description": "A simple PHP load balancer using OpenSwoole and PHP-DI",
  "require": {
    "php": ">=8.4",
    "php-di/php-di": "^7.0",
    "vlucas/phpdotenv": "^5.6",
    "psr/log": "^3.0"
  },
  "require-dev": {
    "openswoole/ide-helper": "^22.1",
    "phpunit/phpunit": "^11.0",
    "friendsofphp/php-cs-fixer": "^3.64"
  },
  "config": {
    "platform": {
      "php": "8.4"
    }
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "cs-check": "php-cs-fixer fix --dry-run --diff",
    "cs-fix": "php-cs-fixer fix"
  }
}
